{
  "name": "ryze",
  "version": "0.1.3",
  "author": "Xiaofan Wu (https://github.com/xiaofan2406)",
  "description": "A minimal state management library for React.",
  "keywords": [
    "ryze",
    "react",
    "context",
    "store",
    "data management"
  ],
  "repository": "xiaofan2406/ryze",
  "bugs": {
    "url": "https://github.com/xiaofan2406/ryze/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">18"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "husky",
    "lint:eslint": "eslint src --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier '**/*.{ts,tsx,js,jsx,json,css,md}' --check --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "prettier '**/*.{ts,tsx,js,jsx,json,css,md}' --write --ignore-path .gitignore",
    "dev": "vite",
    "build": "tsc && tsup",
    "preversion": "npm run build",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "bracketSpacing": false
  },
  "dependencies": {
    "memoize-one": "^6.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "happy-dom": "^15.7.3",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  }
}
