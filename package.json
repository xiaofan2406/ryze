{
  "name": "ryze",
  "version": "0.1.5",
  "author": "Xiaofan Wu (https://github.com/xiaofan2406)",
  "description": "A minimal state management library for React.",
  "keywords": [
    "ryze",
    "react",
    "context",
    "store",
    "data management"
  ],
  "repository": "xiaofan2406/ryze",
  "bugs": {
    "url": "https://github.com/xiaofan2406/ryze/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">18"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "prepare": "husky",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier '**/*.{ts,tsx,mjs,cjs,js,jsx,json,css,md}' --check --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "prettier '**/*.{ts,tsx,mjs,cjs,js,jsx,json,css,md}' --write --ignore-path .gitignore",
    "dev": "vite",
    "build": "tsc -b && tsup",
    "preversion": "npm i && npm run build",
    "postversion": "git push -u origin $(git rev-parse --abbrev-ref HEAD) --follow-tags && npm publish && echo 'â€¦released.'",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,mjs,cjs,js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,mjs,cjs,js,jsx}": [
      "eslint"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "bracketSpacing": false
  },
  "dependencies": {
    "memoize-one": "^6.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@eslint/js": "^9.24.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.24.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reselect": "^5.1.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  }
}
